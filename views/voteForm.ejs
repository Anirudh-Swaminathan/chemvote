<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Vote</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>

  </head>
  <body>

  <div class="container-fluid" id="contId">

    <ul class="breadcrumb" id="ulId">
      <li><a href="/">Home</a></li>
      <li id="active">Vote</li>
      <li><a href="/showMyIp">Show IP</a></li>
      <li><a href="/register">Register</a></li>
      <li><a href="/show/all">View Contestants</a></li>
      <li><a href="/seeResult">RESULT</a></li>
    </ul>

    <h1>Chemical Official CR Elections</h1>
    <% if(errors!="") { %>
      <p id="errorPara" class="alert alert-warning"><%= errors %></p>
    <% } %>
    <h2><p>Choose to VOTE:</p></h2>
    <br><br>
    <form role="form" id="voteform" action="/submitVote" method="post">
    <br>
      <h2>Girls</h2>
      <br>
      
      <% conts.forEach(function (contestant, index){ %>
              <% if(contestant.gender === 'F'){ %>
                  <% var a = encodeURI(contestant.name); %>
                  <div class="form-group">
                  <label class="radio-inline">
                  <input class="girl" type="radio" name="votedCandidateGirl" value=<%= a %>><%= contestant.name %>
                  </label>
              </div>
              <% } %>
          <% }); %>

      <br>

      <h2>Boys</h2>
      <br>
      
      <% conts.forEach(function (contestant, index){ %>
              <% if(contestant.gender === 'M'){ %>
                  <% var a = encodeURI(contestant.name); %>
                  <div class="form-group">
                  <label class="radio-inline">
                  <input class="boy" type="radio" name="votedCandidateBoy" value=<%= a %>><%= contestant.name %>
                  </label>
              </div>
              
              <% } %>
          <% }); %>   
      <br><br><br>
      <button type="submit" class="btn btn-primary" onclick="return btnClick()">Submit Vote</button>
    </form>
  </div>
  </body>
  <script type="text/javascript" src="javascripts/vote.js"></script>
</html>

